{
  "project_name": "CryptoTradingSystem",
  "version": "2.01",
  "aws_region": "ap-southeast-1",
  "trading_config": {
    "symbols": [
      "BTCUSDT"
    ],
    "timeframes": [
      "1h"
    ],
    "lookback_days": 1825,
    "data_collection_schedule": "cron(0 0 * * ? *)"
  },
  
  "aws_resources": {
    "data_bucket_prefix": "crypto-trading-system-data",
    "lambda_timeout": 900,
    "lambda_memory": 512,
    "lambda_runtime": "python3.13"
  },
  
  "binance_api": {
    "base_url": "https://api.binance.com",
    "rate_limit_requests_per_minute": 1200,
    "max_retries": 3,
    "retry_delay_seconds": 1
  },
  
  "data_processing": {
    "file_formats": ["parquet", "csv"],
    "compression": "snappy",
    "partition_by": ["symbol", "interval", "date"],
    "data_retention_days": 1825
  },
  
  "monitoring": {
    "log_level": "INFO",
    "enable_detailed_logging": true,
    "cloudwatch_log_retention_days": 30
  },

  "dynamic_parameters": {
    "risk_per_trade": 0.01,
    "risk_exposition": 0.03,
    "master_trading_switch": true,
    "spot_min_discount_perc": 0.95,
    "monthly_cost_limit": 10.0,
    "spot_instance_types": ["c6i.large", "c5.xlarge", "c6a.2xlarge", "m6i.large", "m5.xlarge"],
    "github_repo": "git@github.com:tpompeu/cripto-trading-system.git"
  }
}